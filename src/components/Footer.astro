---
const today = new Date();
---

<footer class="bg-news-black text-white py-12 mt-12 font-sans">
  <div class="container mx-auto px-4 text-center">
    <p class="mb-4 text-2xl font-serif font-bold">AI NEWS<span class="text-news-accent">*</span></p>
    <div class="flex justify-center gap-6 text-sm mb-8 text-gray-400">
      <a href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/about`} class="hover:text-white">About</a>
      <a href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/contact`} class="hover:text-white">Contact</a>
      <a href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/privacy`} class="hover:text-white">Privacy Policy</a>
      <a href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/terms`} class="hover:text-white">Terms of Service</a>
    </div>
    <p class="text-xs text-gray-500">
      &copy; {today.getFullYear()} AI News. All rights reserved.
    </p>
  </div>
</footer>
