---
const navItems = [
  { name: "Google", path: "/google" },
  { name: "Claude", path: "/claude" },
  { name: "ChatGPT", path: "/chatgpt" },
  { name: "Grok", path: "/grok" },
  { name: "千問", path: "/qianwen" },
  { name: "模型成效評估", path: "/evals" },
];
---

<div class="relative">
  <button id="menu-toggle" class="hover:text-news-accent font-bold flex items-center gap-2">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
    <span>The Menu</span>
  </button>

  <div id="menu-overlay" class="hidden fixed inset-0 bg-black/90 z-50 flex flex-col items-center justify-center text-white transition-opacity duration-300">
    <button id="menu-close" class="absolute top-8 right-8 text-white hover:text-news-accent">
      <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
    </button>

    <nav class="text-center space-y-8">
      {navItems.map(item => (
        <a 
          href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}${item.path}`} 
          class="block text-4xl md:text-6xl font-black font-serif hover:text-news-accent transition-colors"
        >
          {item.name}
        </a>
      ))}
    </nav>
    
    <div class="mt-16 text-sm font-mono text-gray-400">
      &copy; 2025 AI NEWS. All rights reserved.
    </div>
  </div>
</div>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const menuOverlay = document.getElementById('menu-overlay');
  const menuClose = document.getElementById('menu-close');

  menuToggle?.addEventListener('click', () => {
    menuOverlay?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  });

  menuClose?.addEventListener('click', () => {
    menuOverlay?.classList.add('hidden');
    document.body.style.overflow = '';
  });
</script>
