---
const { post } = Astro.props;
const { slug, data } = post;
---

<section class="mb-12 relative group">
  <a href={`${import.meta.env.BASE_URL}/posts/${slug}`} class="block relative aspect-[21/9] overflow-hidden">
    <img 
      src={data.heroImage || "/images/placeholders/default.jpg"} 
      alt={data.title} 
      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"></div>
    
    <div class="absolute top-4 left-4 bg-red-600 text-white text-xs font-bold px-2 py-1 uppercase animate-pulse">
      Live Updates
    </div>

    <div class="absolute bottom-0 left-0 p-6 md:p-10 w-full md:w-2/3 text-white">
      <div class="flex items-center gap-3 mb-3 text-sm font-bold uppercase tracking-wider">
        <span class="bg-white text-black px-2 py-0.5">{data.category}</span>
        <span>{data.readingTime}</span>
      </div>
      <h1 class="text-3xl md:text-5xl font-black mb-4 leading-none font-serif group-hover:underline decoration-news-accent underline-offset-4">
        {data.title}
      </h1>
      <p class="text-lg md:text-xl text-gray-200 font-sans line-clamp-2">
        {data.summary}
      </p>
    </div>
  </a>
</section>
