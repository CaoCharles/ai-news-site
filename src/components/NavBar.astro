---
const navItems = [
  { name: "World News", path: "/world" },
  { name: "Business", path: "/business" }, // Placeholder page
  { name: "Technology", path: "/technology" },
  { name: "Health", path: "/health" }, // Placeholder page
  { name: "Sports", path: "/sports" }, // Placeholder page
  { name: "Culture", path: "/culture" }, // Placeholder page
  { name: "Podcast", path: "/podcasts" },
];

const { currentPath } = Astro.props;
---

<nav class="border-b-2 border-black py-3">
  <ul class="flex flex-wrap justify-center gap-6 text-sm font-bold uppercase tracking-wider">
    {navItems.map((item) => (
      <li>
        <a 
          href={import.meta.env.BASE_URL + item.path.replace(/^\//, '')} 
          class={`hover:text-news-accent transition-colors ${currentPath === item.path ? 'text-news-accent border-b-2 border-news-accent pb-1' : ''}`}
        >
          {item.name}
        </a>
      </li>
    ))}
  </ul>
</nav>
