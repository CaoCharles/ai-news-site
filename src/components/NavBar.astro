---
const navItems = [
  { name: "Google", path: "/google" },
  { name: "Claude", path: "/claude" },
  { name: "ChatGPT", path: "/chatgpt" },
  { name: "Grok", path: "/grok" },
  { name: "千問", path: "/qianwen" },
  { name: "模型成效評估", path: "/evals" },
];

const { currentPath } = Astro.props;
---

<nav class="border-b-2 border-black py-3">
  <ul class="flex flex-wrap justify-center gap-6 text-sm font-bold uppercase tracking-wider">
    {navItems.map((item) => (
      <li>
        <a 
          href={import.meta.env.BASE_URL + item.path.replace(/^\//, '')} 
          class={`hover:text-news-accent transition-colors ${currentPath === item.path ? 'text-news-accent border-b-2 border-news-accent pb-1' : ''}`}
        >
          {item.name}
        </a>
      </li>
    ))}
  </ul>
</nav>
