---
const { post } = Astro.props;
const { slug, data } = post;
---

<a href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/posts/${slug}`} class="block group bg-news-black text-white p-6 relative overflow-hidden">
  <div class="absolute top-0 right-0 p-4 opacity-20 group-hover:opacity-40 transition-opacity">
    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polygon points="10 8 16 12 10 16 10 8"></polygon></svg>
  </div>
  <div class="text-xs font-bold text-news-accent uppercase mb-2">Now Playing</div>
  <h3 class="text-xl font-bold font-serif mb-2 group-hover:underline">{data.title}</h3>
  <p class="text-gray-400 text-sm mb-4 line-clamp-2">{data.description}</p>
  <div class="flex items-center gap-2 text-xs font-mono text-gray-500">
    <span>{data.readingTime || "45 min"}</span>
    <span>â€¢</span>
    <span>{data.source}</span>
  </div>
</a>
